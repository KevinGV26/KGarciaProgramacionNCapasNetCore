@model ML.Departamento
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<h2>Form</h2>
<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>Producto</h2>
            <h5>Ingrese los datos del Departamento:</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @*Crea un salto de linea*@
            <hr />
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Departamento", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="hidden">
                    <div class="col-md-4 col-12 col-sm-6" style="display: none;">
                        @Html.LabelFor(model => model.IdDepartamento)
                        @Html.TextBoxFor(model => model.IdDepartamento, new { @class = " hidden form-control", @id = "txtIdDepartamento" })
                        @Html.ValidationMessageFor(model => model.IdDepartamento)

                    </div>
                </div>

                <div class="col">
                    <div class="col-md-4 col-12 col-sm-6">
                        @Html.LabelFor(model => model.Nombre)
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtDepartamento" })
                        @Html.ValidationMessageFor(model => model.Nombre)

                    </div>
                </div>


                <div class="col">
                    @Html.LabelFor(model => model.Area.IdArea)
                    <div class="col-md-4 col-12 col-sm-6">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-people-fill"></i></span>


                            @Html.DropDownListFor(model => model.Area.IdArea, new SelectList(Model.Area.Areas, "IdArea", "Nombre"), "Selecciona el area correspondiente", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Area.IdArea) 
                        
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "GetAll", "Departamento", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>