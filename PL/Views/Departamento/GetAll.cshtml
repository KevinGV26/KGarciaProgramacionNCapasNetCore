@model ML.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamento</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un departamento para editarlo o + para agregar...</h5>
        <hr />
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })

</div>
<br />
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="hidden">IdProveedor</td>
            <td>Telefono</td>
            <td>Nombre</td>
        </tr>
    </thead>
    <tbody>
        @foreach(ML.Departamento departamento in Model.Departamentos)
            {
                <tr>
                    <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form","Departamento",new {IdDepartamento =departamento.IdDepartamento})"> </a></td>
                    <td class="hidden">@departamento.IdDepartamento</td>
                    <td>@departamento.Nombre</td>
                    <td>@departamento.Area.IdArea</td>
                    <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento= departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este proveedor?');"></a></td>
                </tr>
            }
    </tbody>
</table>
